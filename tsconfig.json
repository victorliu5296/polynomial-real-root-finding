{
  "compilerOptions": {
    "target": "es6",                   
    "module": "commonjs",                
    "moduleResolution": "node",
    "sourceMap": true,                 
    "outDir": "dist",              
    "declaration": true,
    "strict": true,                    
    "esModuleInterop": true,           
    "skipLibCheck": true,              
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
